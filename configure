#!/usr/bin/env bash
THISDIR=$( cd `dirname $0` && pwd )
MODULE=$( basename ${THISDIR})

#Defines TheSDK environment variables
. ${THISDIR}/../../TheSDK.config

#echo "Configuring FFT chisel generator"
#cd $THISDIR/chisel && ./configure && cd ..

CURRENTFILE=${THISDIR}/Makefile
echo "Generating Makefile"

cat << EOF > ${THISDIR}/Makefile

#.PHONY: all sim chisel clean
.PHONY: all sim doc clean

#all: chisel sim
all: sim

verilator:
	rm -rf ${THISDIR}/sv/obj_dir/foobadir
	rm -f ${THISDIR}/sv/obj_dir/*
	mkdir ${THISDIR}/sv/obj_dir/foobadir
	cd ${THISDIR}/sv && verilator -Wall --cc --exe --build --trace ./sim_main.cpp ./inverter.sv
	cd ${THISDIR}/sv/obj_dir/ && ./Vinverter && cd ../..


#sim: chisel
sim:
	cd ${THISDIR}/${MODULE} && \\
	${PYL} __init__.py

#chisel:
#	cd $THISDIR/chisel && \\
#	make

doc:
	cd $THISDIR/doc && \\
	make html

clean:
	#cd ${THISDIR}/chisel && \\
	#make clean && \\
	rm -rf ${THISDIR}/simulations/* 
   
EOF
exit 0

